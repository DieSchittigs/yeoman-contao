{
    "name": "<%= projectName %>",
    "type": "project",
    "require": {
        "php": "^5.6|^7.0",
        "contao/manager-bundle": "<%= contaoVersion %>.*",
        "contao/calendar-bundle": "<%= contaoVersion %>.*",
        "contao/comments-bundle": "<%= contaoVersion %>.*",
        "contao/faq-bundle": "<%= contaoVersion %>.*",
        "contao/listing-bundle": "<%= contaoVersion %>.*",
        "contao/news-bundle": "<%= contaoVersion %>.*",
        "contao/newsletter-bundle": "<%= contaoVersion %>.*",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        <% if(installPHPloy){ %>"banago/phploy": "^4.8"<% } %>
    },
    "config": {
        "component-dir": "assets"
    },
    "extra": {
        "branch-alias": {
            "dev-<%= contaoVersion %>": "<%= contaoVersion %>.x-dev"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Contao\\ManagerBundle\\Composer\\ScriptHandler::initializeApplication"
        ],
        "post-update-cmd": [
            "Contao\\ManagerBundle\\Composer\\ScriptHandler::initializeApplication"
        ]
    }
}
