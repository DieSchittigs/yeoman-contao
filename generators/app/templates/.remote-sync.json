<% if(installRemoteSync){ %>{
    "transport": "<%= preview_ftp_scheme %>",
    "uploadOnSave": true,
    "useAtomicWrites": true,
    "deleteLocal": false,
    "hostname": "<%= preview_ftp_host %>",
    "port": "<%= preview_ftp_port %>",
    "username": "<%= preview_ftp_user %>",
    "password": "<%= preview_ftp_pass %>",
    "target": "<%= preview_ftp_path_remote %>",
    "ignore": [
        ".remote-sync.json",
        "dploy.yaml",
        ".git/**",
        "/src/**"
    ],
    "watch": [
        "/files/theme_<%= theme %>/js/script.js",
        "/files/theme_<%= theme %>/css/style.css"
    ],
    "watch-ds": [
        "/files/**/*"
    ]
}
<% } %>
